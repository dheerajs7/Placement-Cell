<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Allocate Interview</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Allocate Interview</h2>

        <form action="/interview/addinterview" method="POST" class="mt-4">
            <div class="form-group">
                <label for="studentName">Select Student</label>
                <select class="form-control" id="studentName" name="studentName" required>
                    <% students.forEach(student => { %>
                        <option value="<%= student.name %>"><%= student.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group mt-3">
                <label for="companyName">Company Name</label>
                <input type="text" class="form-control" id="companyName" name="companyName" placeholder="Enter company name" required>
            </div>

            <!-- Interview Date Input -->
            <div class="form-group mt-3">
                <label for="interviewDate">Interview Date</label>
                <input type="date" class="form-control" id="interviewDate" name="interviewDate" required>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Allocate Interview</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
